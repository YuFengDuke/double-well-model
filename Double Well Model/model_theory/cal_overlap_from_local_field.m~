function m = cal_overlap_from_local_field(mean_h, std_h, r2, type)

prev_m = 1;

tolerance = 0;
count = 0;
MAX_ITER = 10000;
for i = 1: MAX_ITER
    m = local_field_recursion(prev_m, mean_h, std_h);
    if abs(m - prev_m) == tolerance
        count = count + 1;
    end
    if count > 1000
        break;
    end
    prev_m = m;
end

